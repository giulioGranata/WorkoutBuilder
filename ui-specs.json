  },
  "tokens": {
    "space": {
      "2": "0.5rem",
      "3": "0.75rem",
      "4": "1rem",
      "6": "1.5rem",
      "8": "2rem"
    },
    "radius": {
      "sm": "0.5rem",
      "md": "0.75rem",
      "lg": "1.25rem"
    },
    "shadow": {
      "card": {
        "light": "0 18px 40px rgba(15, 23, 42, 0.08)",
        "dark": "0 20px 48px rgba(8, 15, 31, 0.45)"
      }
    }
  },
  "typography": {
    "family": "Inter, 'Segoe UI', system-ui, -apple-system, sans-serif",
    "scale": {
      "display": {
        "size": "2.25rem",
        "lineHeight": "1.2",
        "weight": 600
      },
      "h1": {
        "size": "1.75rem",
        "lineHeight": "1.25",
        "weight": 600
      },
      "h2": {
        "size": "1.5rem",
        "lineHeight": "1.3",
        "weight": 600
      },
      "h3": {
        "size": "1.25rem",
        "lineHeight": "1.35",
        "weight": 500
      },
      "body": {
        "size": "1rem",
        "lineHeight": "1.5",
        "weight": 400
      },
      "bodySm": {
        "size": "0.875rem",
        "lineHeight": "1.45",
        "weight": 400
      },
      "mono": {
        "size": "0.875rem",
        "lineHeight": "1.45",
        "weight": 500
      }
    }
  },
  "themeSwitch": {
    "attribute": "data-theme",
    "fallback": "prefers-color-scheme",
    "persist": "localStorage",
    "script": "const user = localStorage.getItem('theme'); const sys = window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light'; document.documentElement.dataset.theme = user ?? sys;"
  },
  "components": {
    "Button": {
      "base": "inline-flex items-center justify-center gap-2 font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 disabled:opacity-50",
      "variants": {
        "default": "bg-[--color-accent] text-[--color-surface] hover:bg-[--color-accent-hover] active:bg-[--color-accent-pressed] focus-visible:ring-[--color-accent]",
        "secondary": "bg-[--color-surface-muted] text-[--color-text-primary] hover:bg-[--color-surface] border border-[--color-border]",
        "outline": "border border-[--color-border] text-[--color-text-primary] hover:bg-[--color-surface-muted]",
        "ghost": "text-[--color-text-primary] hover:bg-[color-mix(in srgb, var(--color-text-primary) 10%, transparent)]",
        "link": "text-[--color-accent] underline-offset-4 hover:underline"
      },
      "sizes": {
        "sm": "h-9 px-3 rounded-[--radius-sm] text-sm",
        "md": "h-10 px-4 rounded-[--radius-md] text-sm",
        "lg": "h-11 px-6 rounded-[--radius-md] text-base",
        "icon": "h-10 w-10 rounded-full"
      }
    },
    "Card": {
      "surface": "bg-[--color-surface] border border-[--color-border] rounded-[--radius-lg] shadow-[--shadow-card]",
      "padding": {
        "default": "p-6",
        "compact": "p-4"
      }
    },
    "WorkoutOutput": {
      "layout": {
        "gap": "var(--space-6)",
        "padding": "var(--space-6)"
      },
      "header": {
        "title": "text-[length:--font-h1] font-semibold text-[--color-text-primary]",
        "meta": "flex flex-wrap gap-2 text-[--color-text-tertiary] text-[length:--font-body-sm]"
      },
      "metrics": {
        "grid": "grid gap-4 md:grid-cols-3",
        "item": "bg-[--color-surface-muted] rounded-[--radius-sm] p-4",
        "label": "text-[length:--font-body-sm] text-[--color-text-secondary]",
        "value": "text-[length:--font-h3] font-medium text-[--color-text-primary] tabular-nums"
      },
      "bias": {
        "wrapper": "flex flex-col gap-3 md:flex-row md:items-center",
        "buttons": "Button.variants.ghost",
        "slider": "w-full accent-[--color-accent]"
      },
      "actions": {
        "wrapper": "flex flex-col gap-3 sm:flex-row sm:justify-end"
      }
    },
    "WorkoutSegments": {
      "card": "Card.surface Card.padding.compact flex flex-col gap-4",
      "title": "text-[length:--font-h2] font-semibold text-[--color-text-primary]",
      "list": {
        "item": "flex items-center justify-between py-2 border-b border-[--color-border] last:border-none",
        "bullet": "h-2.5 w-2.5 rounded-full shadow-[0_0_0_2px_rgba(15,23,42,0.08)] dark:shadow-[0_0_0_2px_rgba(255,255,255,0.2)]",
        "label": "text-[length:--font-body] text-[--color-text-primary]",
        "note": "text-[length:--font-body-sm] text-[--color-text-tertiary]",
        "minutes": "text-[length:--font-mono] text-[--color-text-secondary] tabular-nums"
      }
    },
    "WorkoutChart": {
      "shell": "Card.surface Card.padding.default flex flex-col gap-4",
      "header": "flex flex-wrap items-center justify-between gap-3",
      "legend": "flex items-center gap-3 text-[length:--font-body-sm] text-[--color-text-tertiary]",
      "canvas": "relative overflow-hidden rounded-[--radius-md] bg-gradient-to-b from-[--color-surface] to-[--color-surface-muted]",
      "tooltip": "bg-[--color-surface-raised] border border-[--color-border] rounded-[--radius-sm] p-3 shadow-[--shadow-card] text-[length:--font-mono]"
    }
  }
}
